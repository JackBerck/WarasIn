<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/gray_950</item>
        <item name="android:windowBackground">@color/gray_50</item>
    </style>
    <style name="TextTitle" parent="AppTheme">
        <item name="android:textSize">28sp</item>
        <item name="android:fontWeight">700</item>
    </style>
    <style name="TextSubtitle" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:fontWeight">600</item>
    </style>
    <style name="TextBody" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">400</item>
    </style>
    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/blue_600</item>
        <item name="android:textColor">@color/gray_50</item>
        <item name="android:fontWeight">600</item>
    </style>
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/blue_600</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">400</item>
        <item name="hintTextColor">@color/gray_950</item>
    </style>
</resources>